@page "/trailer/{Id:guid}"
@using OutsourceTracker.Models.Trailers
@using OutsourceTracker.Services
@using OutsourceTracker.Tools
@using System.Text
@inject TrailerService TrailerService
@inject NavigationManager Navigation

<PageTitle>Trailer Details - @trailer?.Prefix-@trailer?.Name</PageTitle>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-info bg-gradient text-white py-4 d-flex justify-content-between align-items-center">
                    <h3 class="mb-0 fw-semibold">Trailer Details</h3>
                    <div class="btn-group">
                        <a href="/trailers" class="btn btn-outline-light">Back to List</a>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="card-body text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Loading trailer information...</p>
                    </div>
                }
                else if (trailer == null)
                {
                    <div class="card-body text-center py-5 text-danger">
                        <h4>Trailer not found</h4>
                        <p>The requested trailer could not be loaded.</p>
                        <a href="/trailers" class="btn btn-outline-secondary mt-3">Return to Trailers</a>
                    </div>
                }
                else
                {
                    <div class="card-body p-4 p-md-5">
                        <!-- Info Section -->
                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <div class="border rounded-3 p-4 bg-light-subtle h-100">
                                    <h5 class="fw-bold mb-3">Identification</h5>
                                    <div class="d-flex flex-column gap-2">
                                        <div>
                                            <span class="text-muted small">Prefix</span>
                                            <div class="fs-4 fw-bold text-uppercase">@trailer.Prefix</div>
                                        </div>
                                        <div>
                                            <span class="text-muted small">Number/Name</span>
                                            <div class="fs-4 fw-bold text-uppercase">@trailer.Name</div>
                                        </div>
                                        <div>
                                            <span class="text-muted small">Combined ID</span>
                                            <div class="fs-5">@($"{trailer.Prefix} {trailer.Name}")</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="border rounded-3 p-4 bg-light-subtle h-100">
                                    <h5 class="fw-bold mb-3">Last Spotted</h5>
                                    @if (trailer.LocatedDate.HasValue)
                                    {
                                        <div class="d-flex flex-column gap-2">
                                            <div>
                                                <span class="text-muted small">Location</span>
                                                <div class="fs-5">
                                                    @($"{trailer.Location!.Value.Latitude:F6}, {trailer.Location!.Value.Longitude:F6}")
                                                </div>
                                            </div>
                                            <div>
                                                <span class="text-muted small">Accuracy</span>
                                                <div class="fs-5">@($"{trailer.Location!.Value.Accuracy:F0} m")</div>
                                            </div>
                                            <div>
                                                <span class="text-muted small">Spotted By</span>
                                                <div class="fs-5">@(trailer.LocatedBy ?? "—")</div>
                                            </div>
                                            <div>
                                                <span class="text-muted small">Date</span>
                                                <div class="fs-5">@trailer.LocatedDate?.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic">No location data available yet.</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Map Section -->
                        <div class="border rounded-3 overflow-hidden mb-5 position-relative" style="height: 500px;">
                            <div id="map" style="height: 100%; width: 100%;"></div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex flex-wrap gap-3 justify-content-end">
                            <button class="btn btn-outline-primary btn-lg px-5"
                                    @onclick='() => Navigation.NavigateTo($"/trailer/spot/{trailer.Prefix}/{trailer.Name}")'>
                                <i class="bi bi-geo-alt-fill me-2"></i> Update Location
                            </button>

                            <button class="btn btn-outline-warning btn-lg px-5"
                                    @onclick="EditTrailer">
                                <i class="bi bi-pencil-square me-2"></i> Edit Details
                            </button>

                            <button class="btn btn-outline-danger btn-lg px-5"
                                    @onclick="ShowDeleteConfirm">
                                <i class="bi bi-trash me-2"></i> Delete Trailer
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete trailer <strong>@($"{trailer?.Prefix} {trailer?.Name}")</strong>?</p>
                    <p class="text-danger fw-bold">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteTrailer" disabled="@isDeleting">
                        @(isDeleting ? "Deleting..." : "Delete")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Guid Id { get; set; }
    [Inject] private IMapService Map { get; set; } = default!;

    private TrailerViewModel? trailer;  // Adjust TID type if Guid/string
    private bool isLoading = true;

    private bool showDeleteConfirm = false;
    private bool isDeleting = false;
    private bool mapInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            trailer = await TrailerService.Get(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading trailer: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged(); // Important: trigger render so map div appears
        }
    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Map.InitializeMapAsync();
            mapInitialized = true;
            StateHasChanged();
        }

        if (trailer != null && mapInitialized)
        {
            await Map.ClearMapMarkers();
            await SetTrailerMapMarker(trailer, true);
        }
    }

    private async Task SetTrailerMapMarker(TrailerViewModel trailer, bool focus = false)
    {
        if (trailer.Location.HasValue)
        {
            StringBuilder info = new StringBuilder();
            info.Append("<div style=\"min-width=180px;\">")
            .AppendFormat("<strong>Name:</strong> {0}<br><br>", trailer.Prefix + trailer.Name);

            info.Append("<strong>Last Spotted</strong><br>");

            info.AppendFormat("By: {0} | ", trailer.LocatedBy);
            info.AppendFormat("On: {0} | ", trailer.LocatedDate!.Value.ToLocalTime().ToString("MM/dd/yyyy HH:mm"));
            info.AppendFormat("Accuracy: {0}", Math.Round(trailer.Location.Value.Accuracy, 3));
            info.Append("</div>");
            await Map.CreateMapMarker(trailer.Id.ToString("N"), $"{trailer.Prefix}{trailer.Name}", trailer.Location.Value.Latitude, trailer.Location.Value.Longitude, trailer.Location.Value.Accuracy, info.ToString());

            if (focus)
            {
                await Map.FocusMapMarker(trailer.Id.ToString("N"), null);
            }
        }
    }

    private void EditTrailer()
    {
        Navigation.NavigateTo($"/trailers/{Id}/edit/");
    }

    private void ShowDeleteConfirm() => showDeleteConfirm = true;
    private void HideDeleteConfirm() => showDeleteConfirm = false;

    private async Task DeleteTrailer()
    {
        if (trailer == null) return;

        isDeleting = true;
        try
        {
            await TrailerService.Delete(Id);  // Implement this
            Navigation.NavigateTo("/trailers");
        }
        catch (Exception ex)
        {
            // Show error
            Console.WriteLine($"Delete failed: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            showDeleteConfirm = false;
        }
    }
}