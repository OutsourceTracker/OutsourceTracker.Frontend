@page "/profile"
@layout MainLayout
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using OutsourceTracker.Services
@using System.Text.Json

<PageTitle>Profile - Outsource Tracker</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Header Card -->
            <div class="card shadow border-0 mb-4">
                <div class="card-body p-5">
                    <div class="row align-items-center">
                        <!-- Large Profile Photo -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <img src="@AvatarUrl"
                                 class="rounded-circle border border-3 border-light shadow-sm"
                                 style="width: 180px; height: 180px; object-fit: cover;"
                                 alt="Profile Photo" />
                        </div>

                        <!-- Basic Info -->
                        <div class="col-md-8">
                            <h2 class="fw-bold mb-1">@DisplayName</h2>
                            <p class="text-muted fs-5 mb-3">@Email</p>

                            @if (!string.IsNullOrEmpty(JobTitle))
                            {
                                <p class="mb-1"><strong>Job Title:</strong> @JobTitle</p>
                            }
                            @if (!string.IsNullOrEmpty(Department))
                            {
                                <p class="mb-0"><strong>Department:</strong> @Department</p>
                            }

                            <div class="mt-4">
                                <a href="https://myaccount.microsoft.com/" target="_blank"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit in Microsoft 365
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Claims Details -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Microsoft Account Details</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Claim</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Claims)
                                {
                                    <tr>
                                        <td><code>@claim.Type</code></td>
                                        <td>@claim.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- App Roles -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Assigned App Roles</h5>
                    <span class="badge bg-success">@Roles.Count roles</span>
                </div>
                <div class="card-body">
                    @if (Roles.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var role in Roles.OrderBy(r => r))
                            {
                                <span class="badge bg-success fs-6 px-3 py-2 rounded-pill shadow-sm">
                                    @FormatRoleName(role)
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No roles assigned yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string DisplayName = "User";
    private string Email = "";
    private string AvatarUrl = "";
    private string JobTitle = "";
    private string Department = "";
    private List<Claim> Claims = new();
    private List<string> Roles = new();

    [Inject] private UserPhotoService PhotoService { get; set; } = default!;
    [Inject] private UserService Users { get; init; }

    protected override async Task OnInitializedAsync()
    {
        var user = await Users.GetClaim();

        if (user.Identity?.IsAuthenticated == true)
        {
            // Basic info
            DisplayName = user.FindFirst("name")?.Value
                       ?? user.FindFirst(ClaimTypes.Name)?.Value
                       ?? "User";

            Email = user.FindFirst(ClaimTypes.Email)?.Value
                 ?? user.FindFirst("preferred_username")?.Value
                 ?? "";

            JobTitle = user.FindFirst("jobTitle")?.Value
                    ?? user.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/jobtitle")?.Value
                    ?? "";

            Department = user.FindFirst("department")?.Value ?? "";
            AvatarUrl = await PhotoService.GetAvatarUrlAsync(DisplayName);
            Claims = user.Claims.ToList();
            await LoadRolesAsync(user);
        }
    }

    private async Task LoadRolesAsync(ClaimsPrincipal user)
    {
        var roleClaims = user.FindAll("roles").ToList();

        if (roleClaims.Count == 0) return;

        if (roleClaims.Count > 1)
        {
            Roles = roleClaims.Select(c => c.Value).Distinct().ToList();
            return;
        }

        var value = roleClaims[0].Value.Trim();

        if (value.StartsWith("[") && value.EndsWith("]"))
        {
            try
            {
                var jsonRoles = JsonSerializer.Deserialize<string[]>(value);
                if (jsonRoles != null)
                {
                    Roles = jsonRoles.Distinct().ToList();
                }
            }
            catch { }
        }
        else
        {
            Roles = value.Split(',', StringSplitOptions.RemoveEmptyEntries)
                         .Select(r => r.Trim())
                         .Distinct()
                         .ToList();
        }
    }

    private string FormatRoleName(string role) => role switch
    {
        "Trailers.Admin" => "Trailer Administrator",
        "Trailers.Read" => "Trailer Viewer",
        "Trailers.Write" => "Trailer Editor",
        "Accounts.Admin" => "Accounts Administrator",
        _ => role.Replace(".", " ")
    };
}