@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container-fluid">
        <!-- Application title/banner on the left -->
        <a class="navbar-brand" href="/">Outsource Work Tracker</a>

        <!-- Toggle button for responsive collapse on smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Main navigation items -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!-- Home -->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>

                <!-- Trailers Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="trailersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Trailers
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="trailersDropdown">
                        <li><NavLink class="dropdown-item" href="/trailers/">Manage Trailers</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/trailer/create">Create Trailer</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/trailer/spot">Spot Trailer</NavLink></li>
                    </ul>
                </li>

                <!-- Tractors Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="tractorsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Tractors
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="tractorsDropdown">
                        <li><NavLink class="dropdown-item" href="/tractors/manage">Manage Tractors</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/tractors/create">Create Tractor</NavLink></li>
                    </ul>
                </li>

                <!-- Drivers Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="driversDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Drivers
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="driversDropdown">
                        <li><NavLink class="dropdown-item" href="/drivers/manage">Manage Drivers</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/drivers/create">Create Driver</NavLink></li>
                    </ul>
                </li>

                <!-- Routes Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="routesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Routes
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="routesDropdown">
                        <li><NavLink class="dropdown-item" href="/routes/manage">Manage Routes</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/routes/create">Create Route</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/routes/dispatch">Dispatch Route</NavLink></li>
                    </ul>
                </li>
            </ul>

            <!-- Profile on the right -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Profile
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <!-- Placeholder items; integrate with auth providers (Microsoft 365, Microsoft, Google) as needed -->
                        <li><a class="dropdown-item" href="/profile">View Profile</a></li>
                        <li><a class="dropdown-item" href="/settings">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

