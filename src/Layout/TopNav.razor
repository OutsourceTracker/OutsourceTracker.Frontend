@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using OutsourceTracker.Services
@using OutsourceTracker.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JS
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">
            <i class="bi bi-truck me-2"></i>Outsource Tracker
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Left navigation -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>

                <AuthorizeView>
                    <Authorized>
                        <!-- Trailers -->
                        @if (context.User.HasRolePrefix("Trailers."))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Trailers</a>
                                <ul class="dropdown-menu">
                                    @if (context.User.IsInRole(ApplicationRole.TrailerViewer))
                                    {
                                        <li><NavLink class="dropdown-item" href="/trailers/">Manage Trailers</NavLink></li>
                                    }
                                    @if (context.User.IsInRole(ApplicationRole.TrailerAdmin))
                                    {
                                        <li><NavLink class="dropdown-item" href="/trailer/create">Create Trailer</NavLink></li>
                                    }
                                    @if (context.User.IsInRole(ApplicationRole.TrailerSpotter))
                                    {
                                        <li><NavLink class="dropdown-item" href="/trailer/spot">Spot Trailer</NavLink></li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- Zones -->
                        @if (context.User.HasRolePrefix("Zones."))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Zones</a>
                                <ul class="dropdown-menu">
                                    @if (context.User.IsInRole(ApplicationRole.ZoneAdmin))
                                    {
                                        <li><NavLink class="dropdown-item" href="/zone/create">Create Zone</NavLink></li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- Add your other dropdowns (Tractors, Drivers, Routes) here the same way -->
                    </Authorized>
                </AuthorizeView>
            </ul>

            <!-- Right-aligned auth section -->
            <AuthorizeView>
                <Authorized>
                    <!-- Profile dropdown pushed to right with gap -->
                    <div class="ms-auto d-flex align-items-center gap-3">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-white text-decoration-none"
                               href="#" role="button" data-bs-toggle="dropdown">
                                <img src="@AvatarUrl" class="rounded-circle border border-light" width="32" height="32" alt="Avatar" />
                                <span class="fw-semibold d-none d-md-inline">@DisplayName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header">
                                    <strong>@DisplayName</strong><br />
                                    <small class="text-muted">@Email</small>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><NavLink class="dropdown-item" href="/profile">View Profile</NavLink></li>
                                <li><NavLink class="dropdown-item" href="/settings">Settings</NavLink></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" @onclick="Logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </Authorized>

                <NotAuthorized>
                    <!-- Login button pushed to right -->
                    <div class="ms-auto mt-2 mt-lg-0">
                        <button class="btn btn-outline-light fw-semibold px-4 py-2"
                                @onclick="LoginWithMicrosoft">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign in with Microsoft
                        </button>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private string DisplayName = "User";
    private string Email = "";
    private string AvatarUrl = "https://ui-avatars.com/api/?name=User&background=0d6efd&color=fff&size=128&bold=true&rounded=true";
    private bool IsAuthenticated = false;

    [Inject] private UserPhotoService PhotoService { get; init; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = state.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            IsAuthenticated = true;
            DisplayName = user.FindFirst("name")?.Value
                       ?? user.FindFirst(ClaimTypes.Name)?.Value
                       ?? "User";

            Email = user.FindFirst(ClaimTypes.Email)?.Value
                 ?? user.FindFirst("preferred_username")?.Value
                 ?? "";

            string name = Uri.EscapeDataString(DisplayName);
            AvatarUrl = await PhotoService.GetAvatarUrlAsync(DisplayName);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && IsAuthenticated)
        {
            try
            {
                var realAvatar = await PhotoService.GetAvatarUrlAsync(DisplayName);
                if (realAvatar != AvatarUrl)   // only update if different
                {
                    AvatarUrl = realAvatar;
                    StateHasChanged();
                }
            }
            catch
            {
            }
        }
    }

    private void LoginWithMicrosoft() => Navigation.NavigateToLogin("/authentication/login");

    private async Task Logout()
    {
        await PhotoService.ClearCacheAsync();
        Navigation.NavigateToLogout("/authentication/logout");
    }
}